<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.juli.hangman.MainActivity"
    android:background="@drawable/gradient_background">

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/opcion_un_jugador"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textColor="#ffffff"
        android:background="@drawable/rounder_button"
        android:onClick="empezarJuegoUnJugador" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/opcion_dos_jugadores"
        android:id="@+id/button2"
        android:textColor="#ffffff"
        android:background="@drawable/rounder_button"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/titulo"
        android:contentDescription="titulo" />

    <com.example.juli.hangman.GIFView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    components:src="@drawable/baile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button2" />


</RelativeLayout>
